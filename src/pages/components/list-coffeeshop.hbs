<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Coffee Shop Name</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each location.coffeeShops}}
      <tr>
        <td>
          {{{coffeeShopName}}}
        </td>
        <td>
          {{lat}}
        </td>
        <td>
          {{llng}}
        </td>
        <td>
          {{description}}
        </td>
        <td>
          <b>{{rating}} / 5  </b>
        </td>
        <td>
          <a href="/location/{{../location._id}}/deletecoffeeshop/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>